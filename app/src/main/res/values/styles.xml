<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="floating_botton">
        <item name="android:backgroundTint">?colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">#FFFFFF</item>

    </style>
    <style name="text_view_botton_sheet_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/picture_size</item>
        <item name="android:background">@color/purple_700</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/margin_half</item>
        <item name="android:paddingEnd">@dimen/margin_half</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_view_botton_sheet_discription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">700sp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>


</resources>